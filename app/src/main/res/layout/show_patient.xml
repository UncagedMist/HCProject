<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:padding="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row1"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="NAME"/>

            <TextView
                android:id="@+id/txtName"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="YOUR NAME"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/row1"
            android:id="@+id/row2"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="PHONE"/>

            <TextView
                android:id="@+id/txtPhone"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="15112"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/row2"
            android:id="@+id/row3"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="TEMP."/>

            <TextView
                android:id="@+id/txtTemp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="38.6 C"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/row3"
            android:id="@+id/row4"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="HUMID."/>

            <TextView
                android:id="@+id/txtHumid"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="515.6"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/row4"
            android:id="@+id/row5"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="PULSE."/>

            <TextView
                android:id="@+id/txtPulse"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="115"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/row5"
            android:id="@+id/row6"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="ACCEL."/>

            <TextView
                android:id="@+id/txtAccel"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="515.6"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/row6"
            android:id="@+id/row7"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="LAT."/>

            <TextView
                android:id="@+id/txtLat"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="12.58698"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/row7"
            android:id="@+id/row8"
            android:padding="4dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:text="LNG."/>

            <TextView
                android:id="@+id/txtLng"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:textSize="20sp"
                android:background="#3F51B5"
                android:paddingLeft="5dp"
                android:textAlignment="center"
                android:text="77.125469"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>